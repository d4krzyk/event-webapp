{% extends 'base.html.twig' %}

{% block title %}Edytuj wydarzenie{% endblock %}

{% block body %}
<div class="container my-5">
        <div class="card-body">
            {{ include('event/_form.html.twig', {'button_label': 'Update', 'form': form}) }}

            <div class="mb-3 d-flex gap-2 justify-content-center">
                <a href="{{ path('app_location_new', {'event_id': event.id}) }}" class="btn btn-success">
                    Stwórz nową lokalizację
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin_dashboard') }}" class="btn btn-warning">
                        Powrót do panelu administratora
                    </a>
                {% endif %}
                <a href="{{ path('app_event_index') }}" class="btn btn-secondary">
                    Powrót do listy wydarzeń
                </a>

                {{ include('event/_delete_form.html.twig') }}
            </div>
        </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

        {% block title %}Event WebApp - Strona Główna{% endblock %}

        {% block body %}
            <style>
                html, body {
                    height: 100%;
                    margin: 0;
                    padding: 0;
                }
                body {

                    min-height: 100vh;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }
                .welcome-card {
                    width: 100%;
                    max-width: 440px;
                    box-shadow: 0 4px 24px rgba(0,0,0,0.15);
                    border-radius: 1.5rem;
                }
                .welcome-card .card-header {
                    background: #235159;
                    color: #fff;
                    font-size: 1.5rem;
                    border-top-left-radius: 1.5rem;
                    border-top-right-radius: 1.5rem;
                    text-align: center;
                    font-weight: bold;
                }
                .welcome-card .card-body {
                    background: #fff;
                    border-bottom-left-radius: 1.5rem;
                    border-bottom-right-radius: 1.5rem;
                    text-align: center;
                }
                .welcome-card .btn {
                    min-width: 140px;
                    font-size: 1.1em;
                    margin: 0.5em 0.5em 0 0;
                }
            </style>

                <div class="card welcome-card shadow-lg rounded-0">
                    <div class="card-header rounded-0"">
                        <span style="color: #ffe082;">Event WebApp</span>
                    </div>
                    <div class="card-body">
                        <p class="mb-4" style="font-size: 1.2em;">
                            Zarządzaj wydarzeniami, dołączaj do eventów i poznawaj nowych ludzi!
                        </p>
                        {% if app.user %}
                            <a href="{{ path('app_event_index') }}" class="btn btn-success">Przejdź do wydarzeń</a>
                        {% else %}
                            <a href="{{ path('app_event_index') }}" class="btn btn-outline-success">Przeglądaj wydarzenia</a><br>
                            <a href="{{ path('app_login') }}" class="btn btn-primary">Zaloguj się</a>
                            <a href="{{ path('app_register') }}" class="btn btn-warning text-white">Zarejestruj się</a>
                        {% endif %}
                    </div>
                </div>
        {% endblock %}

{% extends 'base.html.twig' %}

                        {% block title %}Lista lokalizacji{% endblock %}

                        {% block body %}
                            <div class="container my-5">
                                <div class="card shadow-lg rounded-4 mx-auto" style="max-width: 900px;">
                                    <div class="card-header bg-primary text-white text-center rounded-top-4 d-flex justify-content-between align-items-center">
                                        <h3 class="mb-0">Lista lokalizacji</h3>
                                        <a href="{{ path('app_location_new') }}" class="btn btn-success">Dodaj nową lokalizację</a>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3 d-flex gap-2">
                                            <a href="{{ path('app_event_index') }}" class="btn btn-secondary">
                                                Powrót do wydarzeń
                                            </a>
                                        </div>
                                        <table class="table table-bordered align-middle table-hover">
                                            <thead class="table-light">
                                            <tr>
                                                <th>Id</th>
                                                <th>Nazwa</th>
                                                <th>Miasto</th>
                                                <th>Adres</th>
                                                <th>Akcje</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for location in locations %}
                                                <tr>
                                                    <td>{{ location.id }}</td>
                                                    <td>{{ location.name }}</td>
                                                    <td>{{ location.city }}</td>
                                                    <td>{{ location.address }}</td>
                                                    <td>
                                                        <a href="{{ path('app_location_show', {'id': location.id}) }}" class="btn btn-sm btn-info me-1">Szczegóły</a>
                                                        {% if is_granted('ROLE_ADMIN') %}
                                                            <a href="{{ path('app_location_edit', {'id': location.id}) }}" class="btn btn-sm btn-primary">Edytuj</a>
                                                        {% endif %}
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="5" class="text-center">Brak lokalizacji</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        {% endblock %}

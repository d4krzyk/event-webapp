{% extends 'base.html.twig' %}

{% block title %}Szczegóły lokalizacji{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow-lg rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h3 class="mb-0">Szczegóły lokalizacji</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ location.id }}</td>
                    </tr>
                    <tr>
                        <th>Nazwa</th>
                        <td>{{ location.name }}</td>
                    </tr>
                    <tr>
                        <th>Miasto</th>
                        <td>{{ location.city }}</td>
                    </tr>
                    <tr>
                        <th>Adres</th>
                        <td>{{ location.address }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="d-flex gap-2 justify-content-center mt-4">
                <a href="{{ path('app_location_index') }}" class="btn btn-secondary">Powrót do listy</a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_location_edit', {'id': location.id}) }}" class="btn btn-primary">Edytuj</a>
                    {{ include('location/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

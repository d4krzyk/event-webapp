{% extends 'base.html.twig' %}

{% block title %}Edytuj lokalizację{% endblock %}

{% block body %}
<div class="container my-5">

        <div class="card-body">
            {{ include('location/_form.html.twig', {'button_label': 'Zapisz zmiany'}) }}

            <div class="d-flex gap-2 justify-content-center mt-4">
                <a href="{{ path('app_location_index') }}" class="btn btn-secondary">
                    Powrót do listy lokalizacji
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin_dashboard') }}" class="btn btn-warning">
                        Powrót do panelu administratora
                    </a>
                {% endif %}
                {{ include('location/_delete_form.html.twig') }}
            </div>
        </div>

</div>
{% endblock %}

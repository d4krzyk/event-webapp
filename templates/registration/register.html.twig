{% extends 'base.html.twig' %}

{% block title %}Rejestracja{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="card shadow-lg rounded-4 mx-auto" style="max-width: 500px;">
            <div class="card-header bg-primary text-white text-center rounded-top-4">
                <h3 class="mb-0">Rejestracja</h3>
            </div>
            <div class="card-body">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(registrationForm, {'attr': {'class': 'row g-3'}}) }}
                <div class="col-12">
                    {{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-12">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-12">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Hasło',
                        attr: {'class': 'form-control'}
                    }) }}
                </div>
                <div class="col-12">
                    <div class="form-check d-flex gap-1 justify-content-center align-items-center">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>
                </div>
                <div class="col-12 text-center mt-2">
                    <button type="submit" class="btn btn-success px-4 py-2" style="font-size: 1.1em;">Zarejestruj się</button>
                </div>
                {{ form_end(registrationForm) }}
                <div class="col-12 text-center mt-3">
                    <a href="{{ path('app_home') }}" class="btn btn-secondary">
                        Powrót do strony głównej
                    </a>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
